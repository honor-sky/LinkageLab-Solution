<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AccessibilitySolution" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

<!--    <style name="SeekBarColor" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent"> #000000 </item>
    </style>-->


    <style name="SeekBarEnabledStyle">
        <item name="android:thumbTint">@color/black</item>
        <item name="android:progressTint">@color/black</item>
    </style>

    <!-- 비활성화 상태의 SeekBar 스타일 -->
    <style name="SeekBarDisabledStyle">
        <item name="android:thumbTint">@color/grey</item>
        <item name="android:progressTint">@color/grey</item>
    </style>

</resources>